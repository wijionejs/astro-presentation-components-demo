---
import Layout from "../../layouts/Layout.astro";
import ReactComponent from "./_components/react/ReactComponent.jsx";
---

<Layout>
  <h1 class="mb-10 text-4xl font-bold text-center">Island architecture</h1>
  <div class="flex flex-col items-center">
    <div class="flex gap-5">
      <div>
        <p class="text-center mb-2 text-lg">
          <code>&lt;ReactComponent /&gt;</code>
        </p>
        <ReactComponent />
      </div>
      <div>
        <p class="text-center mb-2 text-lg">
          <code>&lt;ReactComponent client:load /&gt;</code>
        </p>
        <ReactComponent client:load />
      </div>
    </div>
  </div>
</Layout>
